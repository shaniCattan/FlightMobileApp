<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="161dp"
        android:layout_height="145dp"
        android:layout_gravity="center"
        android:contentDescription="@string/app_name"
        android:src="@drawable/airplane" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/welcome"
        android:textSize="30dp"
        android:textStyle="italic"
       />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:drawableLeft="@drawable/icon_server"
        android:text="@string/no_server_was_updated"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:textStyle="italic" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:drawableLeft="@drawable/icon_server"
        android:text="@string/no_server_was_updated"
        android:textSize="20dp"
        android:textStyle="italic" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:drawableLeft="@drawable/icon_server"
        android:text="@string/no_server_was_updated"
        android:textSize="20dp"
        android:textStyle="italic" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:drawableLeft="@drawable/icon_server"
        android:text="@string/no_server_was_updated"
        android:textSize="20dp"
        android:textStyle="italic" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:drawableLeft="@drawable/icon_server"
        android:text="@string/no_server_was_updated"
        android:textSize="20dp"
        android:textStyle="italic" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/url"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:autofillHints="@string/type_url"
            android:background="@drawable/edit"
            android:hint="@string/type_url"
            android:inputType="textUri"
            android:padding="20dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/connect_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/button"
            android:onClick="connectClick"
            android:text="@string/connect"
            android:textStyle="bold" />


    </LinearLayout>

    <ImageView
        android:id="@+id/img"
        android:layout_width="307dp"
        android:layout_height="182dp"
        android:layout_marginEnd="58dp"
        android:layout_marginRight="58dp"
        android:layout_marginBottom="393dp"
        android:background="#000000" />

</LinearLayout>


